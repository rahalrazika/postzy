


<div class="card" style="w-75">
    <% @categories.each do |a|%>
  <ul class="list-group list-group-flush">
    <li class="list-group-item h3 font-weight-bold text-center">  <%= a.name%></li>
     <%= link_to "Edit", edit_category_path(a),class:"btn btn-dark  " %>
             <%= link_to "Delete",category_path(a), method: :delete, class:"btn btn-danger " %>
    <%end%>
  </ul>
</div>